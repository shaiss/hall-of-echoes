  private static isGumInstalled(): boolean {
    try {
      execSync('which gum', { stdio: 'ignore' });
      return true;
    } catch {
      return false;
    }
  }

  static success(message: string): void {
    if (this.isGumInstalled()) {
      execSync(`echo "${message}" | gum style --foreground 46`);
    } else {
